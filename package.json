{
  "name": "skeleton-server",
  "version": "1.0.0",
  "description": "Skeleton Server",
  "main": "dist/server.js",
  "scripts": {
    "watch": "tsc -w -p ./",
    "debug": "nodemon --watch ./dist --inspect=0.0.0.0:5858 --nolazy ./dist/server.js",
    "docker-debug": "docker-compose up",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc && copyfiles -u 1 src/app/**/*.html src/app/**/*.css dist/",
    "start": "node ./dist/server.js",
    "start-dev": "npm run build && cross-env NODE_ENV=development node ./dist/server.js",
    "start-alpha": "npm run build && cross-env NODE_ENV=alpha node ./dist/server.js",
    "start-secure": "npm run build && cross-env NODE_ENV=secure node ./dist/server.js"
  },
  "author": "Vignesh T.V.",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "helmet": "^3.14.0",
    "lodash": "^4.17.11",
    "method-override": "^3.0.0",
    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "pug": "^2.0.3",
    "winston": "^3.1.0",
    "xml": "^1.0.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-google": "^0.11.0",
    "eslint-plugin-typescript": "^0.12.0",
    "typescript": "^3.1.3",
    "typescript-eslint-parser": "^20.0.0"
  }
}
